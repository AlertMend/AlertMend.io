{
  "name": "alertmend-ai",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "generate:blog-list": "node scripts/generate-blog-list.js",
    "build:blog": "node scripts/build-blog-html.js && node scripts/fix-html-descriptions.js",
    "build:sitemap": "node scripts/generate-sitemap.js",
    "validate:blogs": "node scripts/validate-blogs.js",
    "prerender": "tsx --tsconfig tsconfig.prerender.json scripts/prerender-routes.tsx",
    "build": "npm run generate:blog-list && npm run build:sitemap && npm run build:blog && npm run validate:blogs && tsc && vite build && npm run prerender",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.0",
    "@vercel/speed-insights": "^1.3.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "marked": "^17.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.7.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
